{
  "name": "@tegebu/griglia",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:tegebu/griglia.git"
  },
  "license": "MIT",
  "author": "tegebu <info@tegebu.com>",
  "workspaces": {
    "packages": [
      "problems/*"
    ]
  },
  "scripts": {
    "build": "lerna run --parallel build",
    "clean": "lerna run --parallel clean",
    "commit": "git cz",
    "format": "eslint --fix 'problems/*/src/**/*.{ts,tsx}'",
    "reset": "lerna clean",
    "setup": "lerna bootstrap && lerna link",
    "test": "jest test --detectOpenHandles --passWithNoTests",
    "update": "yarn update:upgrade && yarn update:install",
    "update:install": "yarn install && yarn upgrade && lerna run --parallel update:install",
    "update:upgrade": "ncu --upgrade --timeout 600000 && lerna run --parallel update:upgrade"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@jamashita/eslint-config": "1.2.2",
    "@types/jest": "26.0.14",
    "@types/node": "14.11.2",
    "@types/sinon": "9.0.7",
    "@typescript-eslint/eslint-plugin": "4.3.0",
    "@typescript-eslint/parser": "4.3.0",
    "@typescript-eslint/typescript-estree": "4.3.0",
    "eslint": "7.10.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.0.2",
    "git-cz": "4.7.1",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "lerna": "3.22.1",
    "lint-staged": "10.4.0",
    "npm-check-updates": "9.0.3",
    "rimraf": "3.0.2",
    "sinon": "9.1.0",
    "sort-package-json": "1.46.0",
    "ts-jest": "26.4.1",
    "ts-node": "9.0.0",
    "typescript": "4.0.3"
  },
  "engines": {
    "node": ">= 14.5.0",
    "npm": "npm is not supported"
  },
  "engineStrict": true
}
